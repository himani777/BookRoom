<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#80000000"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.gangwars.bookroom.Homepage">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/icon_recycler_view"
            android:scrollbars="vertical"

            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="250dp">

        </android.support.v7.widget.RecyclerView>




    <RelativeLayout

        android:layout_width="match_parent"
android:background="@drawable/jhk"

      android:layout_below="@id/icon_recycler_view"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
android:id="@+id/welcome"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="!! LOCK ON DATABASE !!"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/v1"
        android:layout_below="@id/welcome"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/v2"
            android:layout_marginTop="4dp"
            android:layout_below="@id/v1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FFFFFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_below="@id/v2"
            android:id="@+id/buttons"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unlocked(0)"
            android:textStyle="bold"
            android:textSize="15dp"
         android:id="@+id/unlock"
            android:layout_margin="5dp"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shared(1)"
                android:id="@+id/shared"
                android:textStyle="bold"
                android:textSize="15dp"

                android:layout_margin="5dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exclusive(2)"
                android:textStyle="bold"
                android:textSize="15dp"
android:id="@+id/exclusive"
                android:layout_margin="5dp"
                />
</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/v3"
            android:layout_below="@id/buttons"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FFFFFF"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/v4"
            android:layout_marginTop="4dp"
            android:layout_below="@id/v3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FFFFFF"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@id/v4"
    android:orientation="horizontal"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="130dp"
            android:layout_weight="1"

            android:layout_margin="20dp"
            android:id="@+id/check"

            android:background="@drawable/checkavil"
            android:layout_height="130dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgcheck"
                android:src="@drawable/ic_event_available_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/imgcheck"
                android:textStyle="bold"
                android:textSize="26dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="Check Availibility"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="130dp"
           android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/check"
android:id="@+id/bookroomm"
            android:background="@drawable/roombookback"
            android:layout_height="130dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
              android:id="@+id/imgbookroom"
                android:src="@drawable/ic_book_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/imgbookroom"
                android:textStyle="bold"
                android:textSize="26dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="Book a  room"/>

        </RelativeLayout>
</LinearLayout>
</RelativeLayout>

    </RelativeLayout>

